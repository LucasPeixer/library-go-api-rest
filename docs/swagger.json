{
    "openapi": "3.0.0",
    "info": {
        "title": "Teste implementação Swagger",
        "description": "Api utilizada para teste",
        "termsOfService": "http://linkseguro.com.br",
        "contact": {
            "email": "mama@minhapika.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080/api/v1",
            "description": "Api de test"
        }
    ],
    "paths": {
        "/books/create": {
            "post": {
                "summary": "Lista todos os livros",
                "description": "Rota para adição de livros",
                "tags": [
                    "Livros"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/booksCreate"
                            },
                            "examples": {
                                "book": {
                                    "value": {
                                        "title": "Minha Pika",
                                        "synopsis": "Minha Pika quadrada",
                                        "amount": 3,
                                        "author_id": 3,
                                        "genre_ids": [
                                            1,
                                            2,
                                            3,
                                            4,
                                            5
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/booksCreate"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": ""
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "booksCreate": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "synopsis": {
                        "type": "string"
                    },
                    "amount": {
                        "type": "number"
                    },
                    "author_id": {
                        "type": "number"
                    },
                    "genre_ids": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}